<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import java.lang.String?>
<StackPane fx:id="stackPane"
           stylesheets="@menu.css"
           xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="org.example.controller.MenuController"
           minHeight="600.0" minWidth="900.0">
    <styleClass>
        <String fx:value="bg"/>
    </styleClass>

    <Rectangle height="600.0" width="900.0">
        <styleClass>
            <String fx:value="bg-cover"/>
        </styleClass>
    </Rectangle>

    <VBox alignment="CENTER" spacing="20">
        <Button fx:id="newGame" text="NEW GAME" onMouseClicked="#newGame"/>
        <Button fx:id="highScores" text="HIGH SCORES" onMouseClicked="#highScores"/>
        <Button fx:id="exit" text="EXIT" onMouseClicked="#exit"/>
    </VBox>
</StackPane>
